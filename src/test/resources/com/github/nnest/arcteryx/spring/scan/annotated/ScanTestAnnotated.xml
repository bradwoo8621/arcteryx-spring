<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd 
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-4.0.xsd"
	default-lazy-init="true">

	<bean
		id="ClassResolver"
		class="com.github.nnest.arcteryx.spring.ClassReferenceResourceDefinitionResolver"
		p:annotationClass="com.github.nnest.arcteryx.spring.scan.annotated.ResInLayerExtend" />
	<bean
		id="MethodResolver"
		class="com.github.nnest.arcteryx.spring.MethodReferenceResourceDefinitionResolver"
		p:annotationClass="com.github.nnest.arcteryx.spring.scan.annotated.ServiceInLayerExtend" />

	<bean
		id="InterfaceScanner"
		class="com.github.nnest.arcteryx.spring.ResourceInterfaceDefinitionScanner"
		p:basePackages="com.github.nnest.arcteryx.spring.scan.annotated"
		p:beanNameGenerator="com.github.nnest.arcteryx.spring.LayerResourceBeanNameGenerator"
		p:includeAnnotations="com.github.nnest.arcteryx.spring.scan.annotated.ServiceInLayerExtend">
	</bean>

	<context:component-scan
		base-package="com.github.nnest.arcteryx.spring.scan.annotated"
		name-generator="com.github.nnest.arcteryx.spring.LayerResourceBeanNameGenerator">
		<context:include-filter
			type="annotation"
			expression="com.github.nnest.arcteryx.spring.stereotype.AResource" />
	</context:component-scan>
</beans>