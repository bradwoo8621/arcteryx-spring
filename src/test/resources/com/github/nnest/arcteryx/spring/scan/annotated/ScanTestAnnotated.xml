<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd 
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-4.0.xsd"
	default-lazy-init="true">

	<bean
		id="LayerExtendAnnotationResolver"
		class="com.github.nnest.arcteryx.spring.ClassReferenceResourceDefinitionResolver" />
		
	<bean class="com.github.nnest.arcteryx.spring.AutoAwareSpringEnterprise">
		<property name="resourceDefinitionResolvers">
			<map>
				<entry
					key="com.github.nnest.arcteryx.spring.scan.annotated.ResInLayerExtend"
					value-ref="LayerExtendAnnotationResolver" />
			</map>
		</property>
	</bean>
	<context:component-scan
		base-package="com.github.nnest.arcteryx.spring.scan.annotated"
		name-generator="com.github.nnest.arcteryx.spring.LayerResourceBeanNameGenerator">
		<context:include-filter
			type="annotation"
			expression="com.github.nnest.arcteryx.spring.stereotype.AResource" />
	</context:component-scan>
</beans>